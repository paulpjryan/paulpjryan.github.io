<!-- header -->
<div class="hero">
  <div class="hero-head">
    <!-- Github link to project -->
    <div class="navbar">
      <div class="navbar-end">
        <div class="navbar-item">
          <a href="https://github.com/paulpjryan/paulpjryan.github.io/tree/source" class="source-link card">
            <div class="card-content">
              <span id="github-logo">{{fa-icon 'github'}}</span>
              <span>View source on Github</span>
            </div>
          </a>
        </div>
      </div>
    </div>
  </div>
  <div class="hero-body">
    <div class="container">
      <h1 class="title">
        PJ Ryan
      </h1>
      <h2 class="subtitle">
        Software Engineer at <a href="https://neighborly.com">Neighborly</a>
      </h2>
    </div>
  </div>
  {{!-- <div class="hero-foot">
  </div> --}}
</div>

<!-- TODO: tabs if not mobile, drawer if mobile? -->
