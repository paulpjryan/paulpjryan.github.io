      <ul>
        {{#link-to 'index' tagName="li"}}
          <a href="{{view.href}}">Home</a>
        {{/link-to}}

        {{#link-to 'about-me' tagName="li"}}
          <a href="{{view.href}}">About me</a>
        {{/link-to}}

        {{#link-to 'projects' tagName="li"}}
          <a href="{{view.href}}">Projects</a>
        {{/link-to}}

        {{#link-to 'links' tagName="li"}}
          <a href="{{view.href}}">Links</a>
        {{/link-to}}
      </ul>
    </div>
  </nav>

